{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2019",
    "declaration": false,
    "lib": [
      "es6",
      "esnext"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": true,
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ]
  },
  "files": [
    "src/index.ts"
  ],
  "include": ["src/__tests__"]
}
